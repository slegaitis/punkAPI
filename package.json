{
	"name": "glofox",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"axios": "^0.18.0",
		"react": "^16.4.2",
		"react-dom": "^16.4.2",
		"react-redux": "^5.0.7",
		"react-scripts": "1.1.5",
		"react-toastify": "^4.3.0",
		"redux": "^4.0.0",
		"redux-thunk": "^2.3.0"
	},
	"scripts": {
		"start": "concurrently \"react-scripts start\" \"npm run watch-css\"",
		"build": "react-scripts build",
		"test": "jest",
		"update_test": "npm run test -- -u",
		"watch-css": "node-sass-chokidar src/ -o src/ --watch --recursive",
		"eject": "react-scripts eject"
	},
	"devDependencies": {
		"babel-jest": "^23.4.2",
		"babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
		"babel-preset-env": "^1.7.0",
		"babel-preset-react": "^6.24.1",
		"concurrently": "^4.0.1",
		"enzyme": "^3.6.0",
		"enzyme-adapter-react-16": "^1.5.0",
		"enzyme-to-json": "^3.3.4",
		"jest": "^23.5.0",
		"node-sass-chokidar": "^1.3.3",
		"react-addons-test-utils": "^15.6.2",
		"react-test-renderer": "^16.5.0",
		"redux-mock-store": "^1.5.3"
	},
	"jest": {
		"setupTestFrameworkScriptFile": "<rootDir>/src/enzyme.js",
		"moduleNameMapper": {
			"\\.(css|less|sass|scss)$": "<rootDir>/__mocks__/styleMock.js",
			"\\.(gif|ttf|eot|svg)$": "<rootDir>/__mocks__/fileMock.js"
		}
	}
}
